<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_list_element_height"
    android:background="@color/white"
    android:paddingLeft="@dimen/navigation_drawer_list_element_content_padding"
    android:paddingRight="@dimen/navigation_drawer_list_element_content_padding"
    android:gravity="center_vertical">
    
    <ImageView android:id="@+id/icon"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/navigation_drawer_list_element_content_width"
        android:layout_height="@dimen/navigation_drawer_list_element_content_height"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_go_to_today"/>
    
    <TextView android:id="@+id/title"
        android:layout_toRightOf="@+id/icon"
        android:layout_height="@dimen/navigation_drawer_list_element_content_height"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/navigation_drawer_list_element_content_padding"
        android:lines="1"
        android:text="Veranstaltungen"
        android:gravity="center_vertical"
        android:textSize="@dimen/navigation_drawer_list_element_title_text_size"/>
    
    <LinearLayout android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navigation_drawer_list_element_content_height"
        android:orientation="horizontal"
        android:gravity="center">
        
        <TextView android:id="@+id/status"
	        android:layout_width="@dimen/navigation_drawer_list_element_status_width"
    	    android:layout_height="@dimen/navigation_drawer_list_element_status_height"
        	android:text="1"
        	android:gravity="center"
        	android:textSize="@dimen/navigation_drawer_list_element_status_text_size"
        	android:background="@drawable/menu_navigation_status_background"
        	android:textColor="@color/black"/>
        
    </LinearLayout>

</RelativeLayout>
